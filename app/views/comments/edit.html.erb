<h1>Edit Comment</h1>

<%= form_with(model: [@post, @comment], local: true) do |form| %>
  <p>
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </p>
  <p>
    <%= form.submit "Update Comment" %>
  </p>
<% end %>

<%= link_to 'Back to Post', post_path(@post) %>